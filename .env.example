# Application
NODE_ENV=production
PORT=5000
APP_URL=https://redweyne.com

# Inbound email webhook security
INBOUND_SHARED_SECRET=your_random_secret_here

# Outbound SMTP (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@redweyne.com
FROM_NAME=Redweyne Mail

# TTL for emails (in minutes)
TTL_MINUTES=30
